generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String @unique @default(uuid())
  email    String @unique
  name     String
  password String
  token    String? 

  @@map("account")
}

model Log {
  id       String     @unique @default(uuid())
  stack    String 
  date     DateTime   
}

model Survey {
  id       String     @unique @default(uuid())
  question String 
  anwers Anwer[]
  @@map("surveys")
   
}

model Anwer {
   id       String     @unique @default(uuid())
   anwer    String
   image    String? 
   survey   Survey @relation(fields: [surveyId], references: [id])
   surveyId String
   @@map("anwers")
}
